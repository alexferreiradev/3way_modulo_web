<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="livraria">
		<provider>javax.persistence.spi.PersistenceProvider</provider>
		
		<class>data.model.BaseModel</class>
		<class>data.model.Livro</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.posgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/livraria" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="postgres" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-create" />
            
            <!-- Hibernate Configs-->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
		</properties>
		
	</persistence-unit>
</persistence>
